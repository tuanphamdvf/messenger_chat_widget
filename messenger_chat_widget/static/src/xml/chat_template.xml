<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="float_chat_widget.ChatTemplate" owl="1">
        <div viewType="'float_chat_view'" class="d-flex p-4 m-2 mr-4">
            <div class="input-group p-4  ">
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
                <link rel="stylesheet"
                      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.4/font/bootstrap-icons.css"/>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
                      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
                      crossorigin="anonymous" referrerpolicy="no-referrer"/>
                <script src="https://cdn.tailwindcss.com"></script>
            </div>
            <div class="fixed bottom-4 right-4 w-72 bg-white border border-gray-300 rounded shadow">
                <div class="flex items-center justify-between px-4 py-2 border-b border-gray-300">
                    <span class="font-bold">Chat</span>

                </div>
                <div class="px-4 py-2 h-48 overflow-y-scroll">
                    <!-- Nội dung chat -->
                </div>
                <div class="px-4 py-2 flex items-center">
                    <input type="text" placeholder="Nhập tin nhắn"
                           class="flex-1 px-2 py-1 border border-gray-300 rounded"/>
                    <button class="ml-2 px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600">Gửi</button>
                    </div>
                </div>
            </div>

        </t>

    </templates>